{
  "name": "amazon-clone",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "cd amazon-app && npm run build",
    "install-client": "cd amazon-app && npm install --legacy-peer-deps",
    "server": "nodemon server.js",
    "heroku-postbuild": "npm run install-client && npm run build",
    "develop": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix amazon-app\"",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix amazon-app\""
  },

  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "http-proxy-middleware": "^2.0.6",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "react-loader-spinner": "^5.1.5",
    "resolve-path": "^1.4.0",
    "stripe": "^9.1.0",
    "uuid": "^8.3.2",
    "mongoose": "^6.3.3",
    "dotenv": "^16.0.1",
    "nodemon": "^2.0.16",
    "xss-clean": "^0.1.1",
    "yenv": "^3.0.1"
